<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

<%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <%- include('../../partials/navbar.ejs') %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

        <%- include('../../partials/message.ejs') %>

            <!-- Page Heading -->
            <h1 class="h3 mb-4 text-gray-800">Item</h1>
            <!-- End Heading-->

            
            <% if(action == 'view') { %>

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#showItem" role="tab" aria-controls="home" 
                    aria-selected="true">Show Item</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#addItem" role="tab" aria-controls="profile" 
                    aria-selected="false">Add Item</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <%- include('show_table_item.ejs') %>
                <%- include('add_item.ejs') %>
            </div>

            <% } else if(action == 'show image') { %>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#showImage" role="tab" aria-controls="home" 
                    aria-selected="true">Show Image</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
            
            <%- include('show_image_item.ejs') %>

            </div>
            <% }else{ %>

            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#editItem" role="tab" aria-controls="home" 
                  aria-selected="true">Edit Item</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent"></div>

            <%- include('edit_item.ejs') %>

            <% } %>
        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('../../partials/logout_modal.ejs') %>

<%- include('../../partials/js.ejs') %>
<script>
  CKEDITOR.replace( 'about' );
</script>